#
# Makefile for the common code library project. 
# This probably requires GNU make.
#

CFLAGS = __WFLAGS__ __INCLUDE__ __DEBUG__ __CHAR__ __PROFILE__ __OPTIMIZE__ __CHECK_FLAG__ __DEFS__ -D__OSTYPE__ 
CC     = __CC__
AR     = __AR__
RANLIB = __RANLIB__

OBJS = crypt_random.o debug.o mbus.o md5.o memory.o net_udp.o qfDES.o util.o

libcommon.a: $(OBJS)
	$(AR) r libcommon.a $(OBJS)
	$(RANLIB) libcommon.a

%.o: %.c config_unix.h config_win32.h
	$(CC) $(CFLAGS) -c $*.c

clean:
	-rm -f $(OBJS) version.h Makefile libcommon.a

etags:
	etags *.[ch]

ctags:
	ctags *.[ch]

release:
	cvs tag release-`cat VERSION | sed "s/\./-/g"`

